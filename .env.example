###############################
# fastfood_delivery .env example
# Fill secrets in local only, do NOT commit real values.
###############################

# Global
NODE_ENV=development
CORS_ORIGIN=*

# Auth Service
A_PORT=5001
MONGO_URI_Auth=mongodb://localhost:27017/authdb
JWT_SECRET=changeme_jwt
JWT_REFRESH_SECRET=changeme_refresh
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
AUTO_SEED_ADMIN=true
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User
ADMIN_PHONE=0000000000

# Order Service
PORT=5002
MONGODB_URI_Order=mongodb://localhost:27017/orderdb

# Restaurant Service (if present)
PORT_Restaurant=5003
MONGO_URI_Restaurant=mongodb://localhost:27017/restaurantdb

# Delivery Service
PORT_Delivery=5004
MONGO_URI_Delivery=mongodb://localhost:27017/deliverydb
WEBSOCKET_ENABLED=true
GOOGLE_MAPS_API_KEY=replace_with_key
EXPO_PUBLIC_API_URL=http://localhost:5004
EXPO_PUBLIC_DELIVERY_API_URL=http://localhost:5004

# Payment Service
PORT_Payment=5005
MONGO_URI_Payment=mongodb://localhost:27017/paymentdb
PAYHERE_MERCHANT_ID=merchant_id
PAYHERE_SECRET=merchant_secret
PAYHERE_BASE_URL=https://sandbox.payhere.vn
STRIPE_SECRET_KEY=stripe_secret
STRIPE_WEBHOOK_SECRET=stripe_webhook_secret

# Notification Service
PORT_Notification=5007
MONGO_URI_Notification=mongodb://localhost:27017/notificationdb

# Admin Service
PORT_Admin=5008
MONGO_URI_Admin=mongodb://localhost:27017/admindb

# Inter-service URLs (compose network names)
AUTH_SERVICE_URL=http://auth-service:5001
ORDER_SERVICE_URL=http://order-service:5002
RESTAURANT_SERVICE_URL=http://restaurant-service:5003
PAYMENT_SERVICE_URL=http://payment-service:5005
DELIVERY_SERVICE_URL=http://delivery-service:5004
ADMIN_SERVICE_URL=http://admin-service:5008
NOTIFICATION_SERVICE_URL=http://notification-service:5007

# Monitoring (optional)
PROM_URL=http://localhost:9090

###############################
# End of example
###############################